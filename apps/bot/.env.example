# ============================================================================
# SlimyAI Discord Bot Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# Never commit .env files to version control

# ============================================================================
# Server Configuration
# ============================================================================
NODE_ENV=development
LOG_LEVEL=info

# Service identification
BOT_SERVICE_NAME=slimy-discord-bot
BOT_VERSION=dev

# ============================================================================
# Discord Bot Configuration (REQUIRED)
# ============================================================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# ============================================================================
# Development Settings
# ============================================================================
# Enable verbose debug logging (set to true for staging/dev, false for production)
# When enabled, logs detailed command payloads, interaction metadata, and timing information
# All sensitive data (tokens, passwords) is automatically redacted
DEBUG_MODE=false
