{
  "sourceFile": ".env.local",
  "targets": {
    "apps/web/.env.local": {
      "include": [
        "NEXT_PUBLIC_*",
        "ADMIN_API_INTERNAL_URL",
        "NEXT_PUBLIC_ADMIN_API_BASE",
        "DISCORD_CLIENT_ID",
        "DISCORD_REDIRECT_URI"
      ]
    },
    "apps/admin-api/.env.local": {
      "include": [
        "NODE_ENV",
        "PORT",
        "DATABASE_URL",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "DISCORD_REDIRECT_URI",
        "DISCORD_BOT_TOKEN",
        "SLIMYAI_BOT_TOKEN",
        "ROLE_GUILD_ID",
        "SESSION_COOKIE_DOMAIN",
        "CORS_ORIGIN",
        "ADMIN_UI_ORIGIN",
        "WEB_ORIGIN"
      ]
    },
    "apps/admin-ui/.env.local": {
      "include": [
        "NEXT_PUBLIC_*",
        "DISCORD_CLIENT_ID",
        "DISCORD_REDIRECT_URI",
        "NEXT_PUBLIC_ADMIN_API_BASE"
      ]
    }
  },
  "required": [
    "DISCORD_CLIENT_ID",
    "DISCORD_CLIENT_SECRET",
    "DISCORD_REDIRECT_URI"
  ],
  "placeholderReject": [
    "123456789012345678",
    "CHANGEME",
    "<",
    "REPLACE_ME"
  ]
}
