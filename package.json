{
  "name": "slimy-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "// Development": "",
    "dev": "pnpm --filter @slimy/web dev",
    "dev:web": "pnpm --filter @slimy/web dev",
    "dev:admin-ui": "pnpm --filter @slimy/admin-ui dev",
    "dev:admin-api": "pnpm --filter @slimy/admin-api dev",
    "// Build": "",
    "build": "pnpm -r run build",
    "build:all": "pnpm -r run build",
    "build:web": "pnpm --filter @slimy/web build",
    "build:admin-ui": "pnpm --filter @slimy/admin-ui build",
    "build:admin-api": "pnpm --filter @slimy/admin-api build",
    "// Test": "",
    "test": "pnpm -r run test || echo \"TODO: wire tests\"",
    "test:all": "pnpm -r run test || echo \"TODO: wire tests\"",
    "test:web": "pnpm --filter @slimy/web test",
    "test:coverage": "pnpm --filter @slimy/web test:coverage",
    "test:e2e": "pnpm --filter @slimy/web test:e2e",
    "test:e2e:ui": "pnpm --filter @slimy/web test:e2e:ui",
    "// Lint": "",
    "lint": "pnpm -r run lint || echo \"TODO: lint\"",
    "lint:all": "pnpm -r run lint || echo \"TODO: lint\"",
    "lint:web": "pnpm --filter @slimy/web lint",
    "// Database": "",
    "db:generate": "pnpm --filter @slimy/web db:generate",
    "db:migrate": "pnpm --filter @slimy/web db:migrate",
    "db:migrate:prod": "pnpm --filter @slimy/web db:migrate:prod",
    "db:studio": "pnpm --filter @slimy/web db:studio",
    "db:seed": "pnpm --filter @slimy/web db:seed",
    "db:reset": "pnpm --filter @slimy/web db:reset",
    "// Docs": "",
    "docs:import": "pnpm --filter @slimy/web docs:import",
    "docs:check": "pnpm --filter @slimy/web docs:check",
    "// Infrastructure": "",
    "lighthouse": "pnpm --filter @slimy/web lighthouse",
    "lighthouse:mobile": "pnpm --filter @slimy/web lighthouse:mobile"
  }
}
