{
  "name": "slimy-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter @slimy/web run dev",
    "dev:admin-api": "pnpm --filter @slimy/admin-api run dev",
    "dev:admin-ui": "pnpm --filter @slimy/admin-ui run dev",
    "dev:bot": "pnpm --filter @slimy/bot run dev",
    "test:web": "pnpm --filter @slimy/web run test",
    "test:admin-api": "pnpm --filter @slimy/admin-api run test",
    "test:admin-ui": "pnpm --filter @slimy/admin-ui run test",
    "test:bot": "pnpm --filter @slimy/bot run test",
    "test:all": "pnpm -r run test",
    "lint:web": "pnpm --filter @slimy/web run lint",
    "lint": "pnpm -r run lint || echo \"TODO: lint\"",
    "lint:core": "pnpm --filter admin-api --filter web --filter admin-ui run lint || echo \"TODO: lint\"",
    "lint:deprecations": "tsx scripts/check-deprecation.ts",
    "build": "pnpm -r run build",
    "build:core": "pnpm --filter admin-api --filter web --filter admin-ui run build",
    "test": "pnpm -r run test || echo \"TODO: wire tests\"",
    "test:core": "pnpm --filter admin-api --filter web --filter admin-ui run test || echo \"TODO: wire tests\"",
    "prisma:generate": "pnpm --filter admin-api --filter web run prisma:generate"
  },
  "devDependencies": {
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
