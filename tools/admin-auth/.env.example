# Admin Auth Diagnostics Configuration
# Copy this file to .env and customize for your environment

# Base URL for admin API
# Default: http://localhost:3080
ADMIN_API_BASE=http://localhost:3080

# Test timeout in milliseconds
# Default: 5000
TEST_TIMEOUT=5000

# Disable colors in output (set to 1 to disable)
# Default: (colors enabled)
# NO_COLOR=1

# ============================================================================
# Environment variables for admin-api (for reference)
# These should be set in apps/admin-api/.env, not here
# ============================================================================

# Discord OAuth Configuration
# DISCORD_CLIENT_ID=1234567890
# DISCORD_CLIENT_SECRET=abc123xyz...
# DISCORD_REDIRECT_URI=https://admin.slimyai.xyz/api/auth/callback

# Discord Bot Token (optional, for role-based auth)
# DISCORD_BOT_TOKEN=Bot xyz...

# Session & JWT Secrets
# SESSION_SECRET=random_32_plus_character_secret_key_here
# JWT_SECRET=random_32_plus_character_secret_key_here

# Database
# DATABASE_URL=postgresql://user:pass@localhost:5432/slimy

# Role Configuration (optional)
# ROLE_ADMIN_IDS=role_id_1,role_id_2,role_id_3
# ROLE_CLUB_IDS=role_id_4,role_id_5

# User-based roles (optional)
# ADMIN_USER_IDS=user_id_1,user_id_2
# CLUB_USER_IDS=user_id_3,user_id_4

# Cookie Configuration
# COOKIE_DOMAIN=.slimyai.xyz
# COOKIE_SECURE=true
# COOKIE_SAMESITE=lax

# CORS Configuration
# CORS_ORIGIN=https://admin.slimyai.xyz

# Server Configuration
# PORT=3080
# HOST=127.0.0.1
# NODE_ENV=production
